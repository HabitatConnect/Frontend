<div class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row mb-4">
        <div class="col">
            <h1>Laundry Checker</h1>
        </div>
    </div>

    <div class="row">
        <% if(washing_machines.length > 0) { for(var i=0; i < washing_machines.length; i++) { %>
            <div class="col-sm-3 mb-4">
                <div class="card border-primary" style="min-height: 210px">
                    <a href="/checker/item/<%= washing_machines[i]._id %>" class="card-body text-decoration-none">
                        <h5 class="card-title"><%= washing_machines[i]._id%></h5>
                        <p class="card-text"><%= washing_machines[i].status %></p>
                    </a>
                </div>
            </div>
        <% }} else { %>
            
            <div class="row">
                <div class="col-3">
                    <img src="/img/hanyang-habitat-small.png" alt="Small logo">
                </div>
                <div class="col mt-md-4">
                    <h2>We are sorry...</h2>
                    <h4>Looks like there are no washing machines<br/><br/>
                        <a href="/dashboard">Back to dashboard</a>
                    </h4>
                </div>
            </div>


        <% } %>
    </div>

    <!-- pagination -->
    <% if(washing_machines.length > 0){ %>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-5">

                <% if(current == 1){ %>
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <% } else { %>
                    <li class="page-item"><a class="page-link" href="/dashboard">1</a></li>
                <% } %>

                <% var i = (Number(current) > 5 ? Number(current) - 4: 1) %>
                <% if (i !== 1) { %>
                    <li class="page-item"><a class="page-link" href="#">...</a></li>
                <% } %>

                <% for (; i <= (Number(current)+4) && i <= pages; i++) { %>
                    <% if(i == current) { %>
                        <li class="page-item"><a class="page-link" href="#"><%= i %></a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/checker/?page=<%= i %>"><%= i %></a></li>
                    <% } %>
                    <% if (i == Number(current)+4 && i < pages){ %>
                        <li class="page-item"><a class="page-link" href="#">...</a></li>
                    <% } %>
                    <% if(i == Number(current)+4 && i < pages) { %>
                        <li class="page-item"><a class="page-link" href="#">...</a></li>
                    <% } %>
                <% } %>

                <% if(current == pages) { %>
                    <li class="page-item disabled"><a class="page-link" href="#">Last</a></li>
                <% } else { %>
                    <li class="page-item"><a class="page-link" href="/checker/?page=<%= pages %>">Next</a></li>
                <% } %>
            </ul>
        </nav>
    <% } %>
</div>