<div class="container-fluid container-fluid-custom mb-5">
    <div class="row mb-4">
        <div class="col">
            <h1>Laundry Checker</h1>
        </div>
    </div>

    <div class="row">
        <table class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">Washing Machine</th>
                    <th scope="col">Current Status</th>
                    <th scope="col">Change Status</th>
                </tr>
            </thead>
            <tbody>
                <% if(washing_machines.length> 0) { for(var i=0; i < washing_machines.length; i++) { %>
                    <tr>
                        <th scope="row">
                            <%= washing_machines[i].name%>
                        </th>
                        <td>
                            <%= washing_machines[i].status %>
                        </td>
                        <td>
                            <div class="row">
                                <div class="col-md-6">
                                    <form action="/checker/<%= washing_machines[i]._id %>/update-status?_method=PUT"
                                        method="POST">
                                        <input type="hidden" name="status" value="Use">
                                        <button type="submit" class="btn btn-primary btn-lg">Use</button>
                                    </form>
                                </div>
                                <div class="col-md-6">
                                    <form action="/checker/<%= washing_machines[i]._id %>/update-status?_method=PUT"
                                        method="POST">
                                        <input type="hidden" name="status" value="Finish">
                                        <button type="submit" class="btn btn-success btn-lg">Finish</button>
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <% } else { %>
            <div class="row">
                <div class="col-3">
                    <img src="/img/hanyang-habitat-small.png" alt="Small logo">
                </div>
                <div class="col mt-md-4">
                    <h2>We are sorry...</h2>
                    <h4>Looks like there are no washing machines<br /><br />
                        <a href="/dashboard">Back to dashboard</a>
                    </h4>
                </div>
            </div>
        <% } %>
    </div>
</div>