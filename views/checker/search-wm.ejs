<div class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row">
        <% if(searchResults != '') { %>
            <% searchResults.forEach(function(WashingMachine, index) { %>
                <div class="col-sm-3 mb-4">
                    <div class="card border-primary" style="min-height: 210px">
                        <h5 class="card-title"><%= WashingMachine._id%></h5>
                        <p class="card-text"><%= WashingMachine.status %></p>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>No items found</p>
        <% } %>
    </div>
</div>